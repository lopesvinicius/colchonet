<% if @room.errors.any? %>
  <div id="error_explanation">
    <h3>there are errors in this form, please check it</h3>
    <br />
  </div>
<% end %>

<%= form_for @room do |f| %>
  <div class="row">
    <div class="col-md-4">
         <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: "form-control" %>
          <%= error_tag @room, :title %>
        </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :location %> <br />
        <%= f.text_field :location, class: "form-control" %>
        <%= error_tag @room, :location %>
      </div>
    </div>
   </div> 
   
   <div class="row">
    <div class="col-md-4">
      <div class="form-group">
         <%= f.label :description %><br>
         <%= f.text_area :description, class: "form-control" %>
         <%= error_tag @room, :description %>
      </div>
    </div>
   </div>
  
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
